<div class="row">
  <div class="large-9 columns">
    <ul>
      <% @posts.each do |post| %>
        <h2 class='text-center'><%= post.title %></h2>
        <h4 class='text-center'><%= "Written by #{post.user.first_name} #{post.user.last_name}"  %></h2>
        <p><%= post.content.html_safe %></p>
    <% end %>
    </ul>
  </div>
</div>
